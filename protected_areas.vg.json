{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Protected Areas by Country (2013-2024)",
  "data": {
    "url": "https://raw.githubusercontent.com/bhwa0001/FIT3179/main/protected-areas-data.csv"
  },
  "params": [
    {
      "name": "region_filter",
      "bind": {
        "input": "select",
        "options": ["All", "Africa", "Asia", "Europe", "Americas", "Oceania"],
        "name": "Filter by Region:"
      }
    }
  ],
  "transform": [
    {
      "fold": ["2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023", "2024"],
      "as": ["Year", "ProtectedValue"]
    },
    {
      "calculate": "toNumber(datum.ProtectedValue)",
      "as": "ProtectedNumber"
    },
    {
      "filter": "isValid(datum.ProtectedNumber) && datum.ProtectedNumber > 0"
    },
    {
      "calculate": "indexof(datum['Country Name'], 'Africa') >= 0 ? 'Africa' : indexof(datum['Country Name'], 'Asia') >= 0 ? 'Asia' : indexof(datum['Country Name'], 'Europe') >= 0 ? 'Europe' : indexof(datum['Country Name'], 'America') >= 0 ? 'Americas' : 'Oceania'",
      "as": "Region"
    },
    {
      "filter": "region_filter == 'All' || datum.Region == region_filter"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "ProtectedNumber", "order": "descending"}],
      "groupby": ["Year"]
    },
    {
      "filter": "datum.rank <= 20"
    }
  ],
  "mark": "rect",
  "encoding": {
    "y": {
      "field": "Country Name", 
      "type": "nominal",
      "title": "Country",
      "sort": {"field": "ProtectedNumber", "op": "mean", "order": "descending"}
    },
    "x": {
      "field": "Year",
      "type": "ordinal", 
      "title": "Year"
    },
    "color": {
      "field": "ProtectedNumber",
      "type": "quantitative",
      "title": "Protected Areas (%)",
      "scale": {"scheme": "blues"}
    },
    "tooltip": [
      {"field": "Country Name", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "ordinal"},
      {"field": "ProtectedNumber", "type": "quantitative", "title": "Protected Areas (%)", "format": ".1f"},
      {"field": "rank", "type": "ordinal", "title": "Rank"}
    ]
  },
  "config": {
    "axis": {"grid": true}
  }
}