{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 400,
  "title": "Protected Areas Heatmap (2000-2024)",
  "data": {
    "url": "https://raw.githubusercontent.com/bhwa0001/FIT3179/main/protected-areas.csv"
  },
  "transform": [
    {
      "fold": [
        "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009",
        "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019",
        "2020", "2021", "2022", "2023", "2024"
      ],
      "as": ["Year", "ProtectedAreaPercentage"]
    },
    {
      "calculate": "toNumber(datum.ProtectedAreaPercentage)",
      "as": "ProtectedAreaValue"
    },
    {
      "filter": "isValid(datum.ProtectedAreaValue)"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "ProtectedAreaValue", "order": "descending"}],
      "groupby": ["Year"]
    },
    {
      "filter": "datum.rank <= 15"
    }
  ],
  "mark": "rect",
  "encoding": {
    "y": {
      "field": "Country Name",
      "type": "nominal",
      "title": "Country",
      "sort": {"field": "ProtectedAreaValue", "op": "mean", "order": "descending"}
    },
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "color": {
      "field": "ProtectedAreaValue",
      "type": "quantitative",
      "title": "Protected %",
      "scale": {"scheme": "blues"}
    },
    "tooltip": [
      {"field": "Country Name", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"field": "ProtectedAreaValue", "type": "quantitative", "title": "Protected %", "format": ".1f"}
    ]
  }
}