{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Protected Areas by Country (2013-2024)",
  "data": {
    "url": "https://raw.githubusercontent.com/bhwa0001/FIT3179/main/protected-areas.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": ["2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023", "2024"],
      "as": ["Year", "ProtectedValue"]
    },
    {
      "calculate": "toNumber(datum.ProtectedValue)",
      "as": "ProtectedNumber"
    },
    {
      "filter": "isValid(datum.ProtectedNumber) && !isNaN(datum.ProtectedNumber) && datum.ProtectedNumber > 0"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "ProtectedNumber", "order": "descending"}],
      "groupby": ["Year"]
    },
    {
      "filter": "datum.rank <= 15"
    }
  ],
  "mark": "rect",
  "encoding": {
    "y": {
      "field": "Country Name", 
      "type": "nominal",
      "title": "Country",
      "sort": {"field": "ProtectedNumber", "op": "mean", "order": "descending"}
    },
    "x": {
      "field": "Year",
      "type": "ordinal", 
      "title": "Year"
    },
    "color": {
      "field": "ProtectedNumber",
      "type": "quantitative",
      "title": "Protected Areas (%)",
      "scale": {"scheme": "blues"}
    },
    "tooltip": [
      {"field": "Country Name", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "ordinal"},
      {"field": "ProtectedNumber", "type": "quantitative", "title": "Protected Areas (%)", "format": ".1f"},
      {"field": "rank", "type": "ordinal", "title": "Global Rank"}
    ]
  },
  "config": {
    "axis": {"grid": true}
  }
}