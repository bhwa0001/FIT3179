{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "title": "Land Cover Class Rankings, Australia 1988â€“2024",
  "data": {
    "url": "https://raw.githubusercontent.com/bhwa0001/FIT3179/main/Proportion-of-land-cover-classes-Australia-1988-2024.csv"
  },

  "transform": [
    {"filter": "datum.Year >= 2000"},
    {
      "fold": [
        "Herbaceous crops (%)",
        "Grassland (%)",
        "Tree covered areas (%)",
        "Sparsely vegetated areas (%)",
        "Other land cover* (%)"
      ],
      "as": ["Land Cover Class", "Percentage"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Percentage", "order": "descending"}],
      "groupby": ["Year"]
    }
  ],
  "layer": [
    {
      "mark": {"type": "bar", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {"labelAngle": -45, "labelOverlap": true}
          
        },
        "y": {
          "field": "rank",
          "type": "quantitative",
          "title": "Rank",
          "scale": {"domain": [1, 5], "reverse": true},
          "axis": {"tickCount": 5, "values": [1, 2, 3, 4, 5]}
        },
        "color": {
          "field": "Land Cover Class",
          "type": "nominal",
          "title": "Land Cover Class",
          "legend": {"orient": "bottom", "titleOrient": "top"}
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "Land Cover Class", "type": "nominal"},
          {"field": "Percentage", "type": "quantitative", "format": ".1f", "title": "Percentage (%)"},
          {"field": "rank", "type": "quantitative", "title": "Rank"}
        ]
      }
    }
  ]
}