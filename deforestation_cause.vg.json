{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "title": "Tree Cover Loss by Cause, 2001â€“2024",
  "data": {
    "url": "https://raw.githubusercontent.com/bhwa0001/FIT3179/main/tree-cover-loss-by-dominant-driver.csv"
  },
  "params": [
    {
      "name": "country_select",
      "value": "Australia",
      "bind": {
        "input": "select",
        "options": ["Australia", "Brazil", "China"],
        "name": "Select Country: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Entity == country_select"
    },
    {
      "calculate": "datum['Tree cover loss driven by settlements and infrastructure'] || 0",
      "as": "Settlements"
    },
    {
      "calculate": "datum['Tree cover loss driven by the mining or energy industry'] || 0",
      "as": "Mining"
    },
    {
      "calculate": "datum['Tree cover loss driven by non-fire natural disturbances'] || 0",
      "as": "Natural Disturbances"
    },
    {
      "calculate": "datum['Tree cover loss driven by shifting cultivation'] || 0",
      "as": "Shifting Cultivation"
    },
    {
      "calculate": "datum['Tree cover loss driven by logging'] || 0",
      "as": "Logging"
    },
    {
      "calculate": "datum['Tree cover loss driven by agriculture'] || 0",
      "as": "Agriculture"
    },
    {
      "calculate": "datum['Tree cover loss driven by wildfire'] || 0",
      "as": "Wildfire"
    },
    {
      "fold": [
        "Settlements",
        "Mining",
        "Natural Disturbances",
        "Shifting Cultivation",
        "Logging",
        "Agriculture",
        "Wildfire"
      ],
      "as": ["Cause", "LossValue"]
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "LossValue",
          "as": "total_loss_year"
        }
      ],
      "groupby": ["Year"]
    },
    {
      "calculate": "(datum.LossValue / datum.total_loss_year) * 100",
      "as": "percentage"
    }
  ],
  "layer": [
    {
      "mark": {"type": "area", "interpolate": "monotone"},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year"
        },
        "y": {
          "aggregate": "sum",
          "field": "LossValue",
          "type": "quantitative",
          "title": "Tree Cover Loss Proportion %",
          "stack": "normalize"
        },
        "color": {
          "field": "Cause",
          "type": "nominal",
          "title": "Cause of Loss"
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "Cause", "type": "nominal", "title": "Cause"},
          {
            "aggregate": "sum",
            "field": "LossValue",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Hectares Lost"
          },
          {
            "field": "percentage",
            "type": "quantitative",
            "format": ".1f",
            "title": "Percentage"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {"country": "Australia", "year": "2020", "cause": "Wildfire", "text": "2020 Australian Bushfires"},
          {"country": "Brazil", "year": "2003", "cause": "Agriculture", "text": "2003 Agriculture Peak"},
          {"country": "China", "year": "2015", "cause": "Logging", "text": "2015 Logging Peak"}
        ]
      },
      "transform": [
        {"filter": "datum.country == country_select"}
      ],
      "layer": [
        {
          "mark": {
            "type": "rule",
            "color": "black",
            "strokeWidth": 1,
            "strokeDash": [3, 3]
          },
          "encoding": {
            "x": {"field": "year", "type": "temporal"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 5,
            "dy": -5,
            "fontSize": 10,
            "fontWeight": "bold"
          },
          "encoding": {
            "x": {"field": "year", "type": "temporal"},
            "y": {"value": 0},
            "text": {"field": "text", "type": "nominal"}
          }
        }
      ]
    }
  ]
}